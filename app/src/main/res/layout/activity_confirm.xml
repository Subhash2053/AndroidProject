<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fun.com.example.lenovo.cart.ConfirmActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="371dp"
        android:layout_height="49dp"
        android:layout_below="@+id/appBarLayout"

        android:layout_marginTop="18dp"
        android:text="Shipping Address"
        android:textColor="@color/dialog_bg"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/address"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_centerHorizontal="false"
        tools:layout_editor_absoluteX="3dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:ems="10"
        android:hint="Enter address here......"
        android:inputType="text|textCapCharacters|textAutoCorrect|textImeMultiLine|textPostalAddress"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="119dp" />

    <EditText
        android:id="@+id/number"
        android:layout_width="380dp"
        android:layout_height="44dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"

        android:ems="10"
        android:hint="Enter contact no. here......"
        android:inputType="textPersonName|number"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="226dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="386dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="84dp"
        android:text="Contact no."
        android:textColor="@color/dialog_bg"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="192dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/number"
        android:layout_marginTop="19dp"
        android:text="Total Amount"
        android:textColor="@color/dialog_bg"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/appBarLayout"
        android:layout_alignLeft="@+id/number"
        android:layout_alignRight="@+id/appBarLayout"
        android:layout_alignStart="@+id/number"
        android:layout_below="@+id/textView16"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="27dp"
        android:text="Amount"
        android:textSize="24sp" />


    <Button
        android:id="@+id/order1"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/number"
        android:layout_alignRight="@+id/number"
        android:layout_below="@+id/amount"
        android:layout_marginTop="32dp"
        android:text="Order Now" />

</RelativeLayout>
